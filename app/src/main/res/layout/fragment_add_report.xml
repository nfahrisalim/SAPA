<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@android:color/white"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:layout_marginEnd="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            app:tint="#8B5CF6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lapor Bang"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#8B5CF6" />

    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Image Upload Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:backgroundTint="@android:color/white"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Image Preview Area -->
                    <LinearLayout
                        android:id="@+id/layout_image_placeholder"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bg_image_placeholder">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_image_placeholder"
                            app:tint="#CCCCCC" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_selected_image"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:visibility="gone"
                        android:background="@drawable/bg_image_preview" />

                    <!-- Photo Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp"
                        android:weightSum="2">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_ambil_foto"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/bg_button_orange"
                            android:text="Ambil Foto"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textAllCaps="false" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_unggah_foto"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/bg_button_red"
                            android:text="Unggah Foto"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textAllCaps="false" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Report Title Input -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:backgroundTint="@android:color/white"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <EditText
                        android:id="@+id/et_judul_laporan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Judul Laporan"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:textColorHint="#AAAAAA"
                        android:background="@null"
                        android:padding="0dp"
                        android:inputType="text"
                        android:maxLines="2" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Description Input -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:backgroundTint="@android:color/white"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <EditText
                        android:id="@+id/et_deskripsi_laporan"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:hint="Deskripsi Laporan"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:textColorHint="#AAAAAA"
                        android:background="@null"
                        android:padding="0dp"
                        android:gravity="top|start"
                        android:inputType="textMultiLine"
                        android:scrollbars="vertical" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Location Input -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:backgroundTint="@android:color/white"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/et_lokasi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Lokasi"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:textColorHint="#AAAAAA"
                        android:background="@null"
                        android:padding="0dp"
                        android:inputType="text"
                        android:maxLines="2" />

                    <ImageView
                        android:id="@+id/btn_location"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/bg_location_button"
                        android:src="@drawable/ic_location"
                        android:padding="6dp"
                        app:tint="@android:color/white" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Danger Level Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:backgroundTint="@android:color/white"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Tingkat Bahaya"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- Radio Group for Danger Level -->
                    <RadioGroup
                        android:id="@+id/rg_tingkat_bahaya"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/rb_rendah"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:buttonTint="#8B5CF6"
                            android:text="Rendah (Cenderung Aman dan Lancar)"
                            android:textColor="#333333"
                            android:textSize="14sp" />

                        <RadioButton
                            android:id="@+id/rb_sedang"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:buttonTint="#8B5CF6"
                            android:text="Sedang (Perlu Waspada)"
                            android:textColor="#333333"
                            android:textSize="14sp" />

                        <RadioButton
                            android:id="@+id/rb_tinggi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:buttonTint="#8B5CF6"
                            android:text="Tinggi (Bahaya Parah)"
                            android:textColor="#333333"
                            android:textSize="14sp" />

                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Submit Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_lapor_sekarang"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_button_orange"
                android:text="Lapor Sekarang"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_marginBottom="20dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>